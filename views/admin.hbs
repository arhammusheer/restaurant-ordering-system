<meta http-equiv="refresh" content="10" />
<nav class="navbar navbar-light bg-light shadow-sm">
  <span class="navbar-brand mb-0 h1 font-weight-bold">
    {{name.title}}
  </span>
</nav>
<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-md-8 mb-4">
      <div class="card shadow border-0 roundness-1 mb-4">
        <div class="card-body">
          <div class="h4 font-weight-bold">
            Open Orders
          </div>
          {{#if orders}}
            <div class="card-columns">
              {{#each orders}}
                <div class="card shadow border-0 roundness-1">
                  <div class="card-body">
                    <h5>
                      {{this.menuItemId.name}}
                    </h5>
                    <p>
                      Table Code:
                      <b>
                        {{this.tableCode}}
                      </b>
                    </p>
                    <small>
                      Current status:
                      {{this.status}}
                    </small>
                    <br />
                    <small>
                      Update Status
                    </small>
                    <div class="btn-group w-100">
                      <a
                        href="/admin/ordered/{{this._id}}"
                        class="btn btn-sm btn-primary"
                      >
                        Ordered
                      </a>
                      <a
                        href="/admin/preparing/{{this._id}}"
                        class="btn btn-sm btn-warning"
                      >
                        Preparing
                      </a>
                      <a
                        href="/admin/delivered/{{this._id}}"
                        class="btn btn-sm btn-danger"
                      >
                        Delivered
                      </a>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          {{else}}
            <div class="h5 text-secondary">
              No open orders
            </div>
          {{/if}}
        </div>
      </div>
      {{#if oldOrders}}
        <div class="card shadow border-0 roundness-1">
          <div class="card-body">
            <h4 class="font-weight-bold">
              Recently closed orders
            </h4>
            <div class="card-columns">
              {{#each oldOrders}}
                <div class="card shadow border-0 roundness-1">
                  <div class="card-body">
                    <h5>
                      {{this.menuItemId.name}}
                    </h5>
                    <p>
                      Table Code:
                      <b>
                        {{this.tableCode}}
                      </b>
                    </p>
                    <small>
                      Current status:
                      {{this.status}}
                    </small>
                    <br />
                    <small>
                      Update Status
                    </small>
                    <div class="btn-group w-100">
                      <a
                        href="/admin/preparing/{{this._id}}"
                        class="btn btn-sm btn-warning"
                      >
                        Reopen
                      </a>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      {{/if}}
    </div>
    <div class="col-md-4">
      <div class="card shadow border-0 roundness-1 mb-4">
        <div class="card-header bg-white border-0">
          <div class="row justify-content-between m-1">
            <div class="h4 font-weight-bold">
              Tables
            </div>
            <a href="/admin/table/new" class="btn btn-primary">
              New Table
            </a>
          </div>
        </div>
        <div class="card-body">
          <ul class="list-group">
            {{#if tables}}
              {{#each tables}}
                <a
                  class="list-group-item list-group-item-action"
                  href="/admin/table/{{this._id}}"
                >
                  <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">
                      {{this._id}}
                    </h5>
                    <small>
                      Occupancy:
                      {{this.occupancy}}
                    </small>
                  </div>
                  <p class="mb-0">
                    Position:
                    {{this.position}}
                  </p>
                </a>
              {{/each}}
            {{else}}
              <div class="h5 text-secondary">
                No tables set
              </div>
            {{/if}}
          </ul>
        </div>
      </div>
      <div class="card shadow border-0 roundness-1">
        <div class="card-body">
          <h3 class="font-weight-bold">
            Menu
          </h3>
          <a href="/admin/menu" class="btn btn-primary w-100 mb-2">
            View menu
          </a>
          <a href="/admin/menu/new" class="btn btn-info w-100">
            Add new menu item
          </a>
        </div>
      </div>
    </div>
  </div>
</div>