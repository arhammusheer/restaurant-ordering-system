<div class="container mt-4">
  <h2>
    My Orders
  </h2>
  <div class="row">
    <div class="col-md-8">
      {{#each orders}}
        <div class="row">
          <div
            class="card shadow border-0 roundness-1 animate__animated animate__slideInUp mb-2	w-100"
          >
            <div class="card-body">
              <h3>
                {{this.menuItemId.name}}
              </h3>
              <small>
                Price:
                {{this.menuItemId.price}}
              </small>
              <h4 class="mt-4">
                status:
                <b>
                  {{this.status}}
                </b>
              </h4>
              <small>
                {{this.createdAt}}
              </small>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="col-md-4">
      <div
        class="card shadow border-0 roundness-1 animate__animated animate__slideInUp mb-2	w-100"
      >
        <div class="card-body">
          <h5>
            Total Bill
          </h5>
          <h3>
            {{totalPrice}}
          </h3>
        </div>
      </div>
    </div>
  </div>
</div>