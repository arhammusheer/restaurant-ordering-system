<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">{{name.title}}</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-link" href="/table/myorders?table_code={{tableCode}}">My Orders</a>
    </div>
  </div>
</nav>
<div class="container mt-4">
  <h2 class="font-weight-bold mb-0">
    Menu
  </h2>
	<small class="text-secondary">This page is optimized for mobile</small>
	<div class="card-columns mt-4">
  {{#each menu}}
      <a href="{{../path}}/{{this._id}}?table_code={{../tableCode}}" class="w-100 text-dark" style="text-decoration: none;">
        <div
          class="card shadow border-0 roundness-2 animate__animated animate__slideIn mb-2"
        >
					{{#if this.image}}
						<img src="{{this.image}}" class="card-img-top roundness-1" alt="{{this.name}}-image" style="max-height:10rem; object-fit: cover;" />
					{{/if}}
          <div class="card-body">
            <h2 class="font-weight-bold">
              {{this.name}}
            </h2>
            <p>
              {{this.description}}
            </p>
            <h4>
              Price
              <b>
                {{this.price}}
              </b>
            </h4>
          </div>
        </div>
      </a>
  {{/each}}
	</div>
</div>